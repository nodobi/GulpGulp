<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/drink_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:text="@string/main_drink_amount_unit"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/drink_progressbar"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginTop="@dimen/margin_padding_size_medium"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="10"
        android:progressDrawable="@drawable/progress_main_drink_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drink_amount" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_drink_list"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/margin_padding_size_medium"
        android:layout_marginBottom="@dimen/margin_padding_size_medium"
        app:layout_constraintEnd_toEndOf="@id/drink_progressbar"
        app:layout_constraintStart_toStartOf="@id/drink_progressbar"
        app:layout_constraintTop_toBottomOf="@id/drink_progressbar"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>