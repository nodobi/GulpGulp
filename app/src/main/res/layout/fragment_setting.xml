<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="?attr/actionBarSize"/>

    <View
        android:id="@+id/view_option_manage_drink"
        android:layout_width="0dp"
        android:layout_height="@dimen/standard_touch_size"
        android:background="@drawable/shape_background_round"
        android:layout_marginStart="@dimen/margin_padding_size_medium"
        android:layout_marginEnd="@dimen/margin_padding_size_medium"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title_option_manage_drink"/>

    <TextView
        android:id="@+id/title_option_manage_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_manage_drink_title"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginStart="@dimen/margin_padding_size_medium"
        app:layout_constraintStart_toStartOf="@id/view_option_manage_drink"
        app:layout_constraintTop_toTopOf="@id/view_option_manage_drink"
        app:layout_constraintBottom_toBottomOf="@id/view_option_manage_drink"/>

    <ImageView
        android:id="@+id/img_option_manage_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigate_next_24dp"
        android:layout_marginEnd="@dimen/margin_padding_size_small"
        app:layout_constraintEnd_toEndOf="@id/view_option_manage_drink"
        app:layout_constraintTop_toTopOf="@id/view_option_manage_drink"
        app:layout_constraintBottom_toBottomOf="@id/view_option_manage_drink"
        />



    <View
        android:id="@+id/view_option_goal"
        android:layout_width="0dp"
        android:layout_height="@dimen/standard_touch_size"
        android:background="@drawable/shape_background_round"
        android:layout_marginStart="@dimen/margin_padding_size_medium"
        android:layout_marginEnd="@dimen/margin_padding_size_medium"
        android:layout_marginTop="@dimen/margin_padding_size_medium"
        app:layout_constraintTop_toBottomOf="@id/view_option_manage_drink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title_option_goal"/>

    <TextView
        android:id="@+id/title_option_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_manage_goal_title"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginStart="@dimen/margin_padding_size_medium"
        app:layout_constraintStart_toStartOf="@id/view_option_goal"
        app:layout_constraintTop_toTopOf="@id/view_option_goal"
        app:layout_constraintBottom_toBottomOf="@id/view_option_goal"/>

    <TextView
        android:id="@+id/amount_option_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_padding_size_small"
        app:layout_constraintEnd_toEndOf="@id/view_option_goal"
        app:layout_constraintTop_toTopOf="@id/view_option_goal"
        app:layout_constraintBottom_toBottomOf="@id/view_option_goal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>